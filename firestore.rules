rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own investments data
    match /investments/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow a temporary permissions check
    match /_permissions_check/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Maintain existing rules for tasks
    match /tasks/{userId}/userTasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}